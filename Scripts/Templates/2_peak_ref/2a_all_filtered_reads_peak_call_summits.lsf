source activate scPASU_env

# Variable
dir=dirpath
compartment=compartmentname
dir=${dir}${compartment}/
prong=all_filtered_reads
bam_dir=${dir}1d_merged_bam/
out_dir=${dir}2a_peaks/${prong}/

# Argument
gsize=hs
read_extsize=200

if [ ! -d "$out_dir" ]; then
  mkdir -p $out_dir
fi

cd ${bam_dir}

for strand in plus minus; do
   bam_prefix=dedup_uniq_genomicAfiltered_merged_${strand}
   macs2 callpeak \
        --seed 123 \
        -t ${bam_dir}${bam_prefix}.bam \
        --keep-dup all \
        --gsize $gsize \
        --format BAM \
        --nomodel \
        --extsize ${read_extsize} \
        --outdir ${out_dir} \
        --name ${bam_prefix} \
        -B \
	--verbose 2 \
        --call-summits &
done
